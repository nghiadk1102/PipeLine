<div class="row tile_count">
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="fa fa-user"></i> <%= t ".number_of_employees" %></span>
    <div class="count">

      </div>
    <span class="count_bottom">
      <i class="green"><i class="fa fa-sort-asc"></i>10%</i> <%= t ".from_last_month" %>
    </span>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="fa fa-clock-o"></i> <%= t ".hour_of_overtimes" %></span>
