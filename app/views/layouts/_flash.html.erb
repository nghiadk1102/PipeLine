<% flash.each do |key, value| %>
   <div class="alert alert-<%= key %> fade in" id="notice">
		<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
   	<strong><%= key %></strong>  <%= value %>.
  </div>
  <script type="text/javascript">
    setTimeout(function(){
      $('#notice').remove();
    }, 3000);
  </script>
<% end %>
