<tr>
	<td><%= line.id %></td>
  <td><%= link_to line.name, line_path(line) %></td>
  <td><%= line.struction_name %></td>
  <td><%= line.created_at %></td>
  <td><%= line.description %></td>
  <td>
    <button class="fa fa-pencil button_action" data-toggle="modal" data-target="#<%= line.id %>"></button>
  	<button class="fa fa-eye button_action show-line" data-id="<%= line.id %>" data-toggle="modal" data-target="#show-map-line"></button>
  	<button class="button_action"><%= link_to "", line_path(line), confirm: "Are you sure?", method: :delete, class: "fa fa-trash" %></button>
  </td>
</tr>

<div class="modal fade" id="<%= line.id %>" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit Line</h4>
      </div>
      <div class="modal-body">

        <%= form_for line, url: line_path(line) do |f| %>
          <p>
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </p>
          <p>
            <%= f.label :description %>
            <%= f.text_area :description, rows: 10, class: "form-control" %>
          </p>
          <%= f.submit "Update", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
