<div class="right_col" role="main">
  <div class="row">
    <div class="col-md-8">
      <div class="information-line" data-line="<%= @line.id %>">
        <label for=""><h4><strong>Infomation</strong></h4></label>
        <p>
          <label>Name: </label><span><%= @line.name %></span>
        </p>
        <p>
          <label>Type of line: </label><span><%= @line.struction_name %></span>
        </p>
        <p>
          <label>Description: </label><span><%= @line.description %></span>
        </p>
      </div>
    </div>
    <div class="col-md-4">
      <div id="map-line" class="mini-map"></div>
    </div>
  </div>
  <div class="row">
    <label for=""><h4><strong>InterSect Mark</strong></h4></label>
    <div class="mark-table">
      <table id="dataTable" class="display" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th class="id">ID</th>
            <th>Lat</th>
            <th>lng</th>
            <th>Intersect Line</th>
            <th>Description</th>
            <th class="action">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @intersect_marks.each do |intersect_mark| %>
            <tr>
              <td>
                <%= intersect_mark.id %>
              </td>
              <td>
                <%= intersect_mark.lat %>
              </td>
              <td>
                <%= intersect_mark.lng %>
              </td>
              <td>
                <%= find_intersect_line @line.id, intersect_mark.first_line_id, intersect_mark.second_line_id %>
              </td>
              <td>
                <%= intersect_mark.description %>
              </td>
              <td>
                <button class="fa fa-eye button_action show-mark" data-mark="<%= [intersect_mark.id, intersect_mark.lat, intersect_mark.lng] %>"></button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render "script_google_map_init" %>
<script>
  $(document).ready(function() {
    var line = $('.information-line').data('line');
    get_line(line);
  });
</script>
