<div class="modal fade" id="create_contruction" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Crete Pipeline</h4>
      </div>
      <div class="modal-body">

        <%= form_for @new_contruction, url: contructions_path, method: :post do |f| %>
          <p>
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </p>

          <p>
            <%= f.label :min_height %>
            <%= f.text_field :min_height, class: "form-control" %>
          </p>

          <p>
            <%= f.label :max_height %>
            <%= f.text_field :max_height, class: "form-control" %>
          </p>

          <p>
            <%= f.label :description %>
            <%= f.text_field :description, class: "form-control" %>
          </p>

          <p>
            <%=f.label :Contruction_type %>
            <%= f.select :contruction_types_id, contruction_type_for_select.collect{|contruction| [contruction.name, contruction.id]},{}, class: "form-control" %>
          </p>
          <%= f.submit "Create", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
